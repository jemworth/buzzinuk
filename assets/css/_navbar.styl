.m-t-md
    margin-top 20px

.navbar-default
    background-color transparent
    border-color transparent
    -webkit-transition all .3s ease-in-out 0s
    transition all .3s ease-in-out 0s
    .navbar-brand
        color #fff
        height auto
        display block
        font-size 14px
        padding 0 20px 15px 0
        border-radius 0 0 5px 5px
        font-weight 700
        -webkit-transition all .3s ease-in-out 0s
        transition all .3s ease-in-out 0s
        h4
            display none

.navbar-wrapper
    position absolute
    top 0
    right 0
    left 0
    z-index 999
    .pull-right
        position relative
        width 35px
        height 40px

.navbar-brand
    float left
    position relative
    height 50px
    padding 15px 15px
    font-size 18px
    line-height 20px
    position relative !important

#nav-icon1, #nav-icon2, #nav-icon3, #nav-icon4
    width 35px
    height 40px
    line-height 0
    position absolute
    margin 0 auto
    -webkit-transform rotate(0)
    transform rotate(0)
    -webkit-transition .5s ease-in-out
    transition .5s ease-in-out
    cursor pointer
    top 0
    z-index -1

#nav-icon1
    span
        &:nth-child(1)
            top 0
        &:nth-child(2)
            top 10px
        &:nth-child(3)
            top 20px

#nav-icon1 span, #nav-icon3 span, #nav-icon4 span
    display block
    position absolute
    height 4px
    line-height 0
    width 100%
    background #fff
    border-radius 9px
    left 0
    -webkit-transform rotate(0)
    transform rotate(0)
    -webkit-transition .25s ease-in-out
    transition .25s ease-in-out

.fs-navigation-handle
    &.fs-navigation-enabled
        border none
        padding 0

.fs-light
    &.fs-navigation-handle
        &.fs-navigation-enabled
            height 40px
            position absolute
            top 0
            font-size 0
            background 0 0
            width 100%
            outline 0

.top_menu
    position relative
    top 18px
    &::before
        position absolute
        top -15px
        left -12px
        z-index -1
        box-sizing content-box
        padding 8px 12px
        width 100%
        height 100%
        border-radius 100%
        background-color #fff
        content ''
        opacity 0
        -webkit-transition -webkit-transform 0.2s, opacity 0.2s
        transition transform 0.2s, opacity 0.2s
        -webkit-transform scale(0)
        transform scale(0)

.section_header
    svg
        path
            stroke #ffffff

.top_menu:hover::before,
.top_menu:focus::before
    opacity 1
    -webkit-transform scale(1)
    transform scale(1)

.top_menu:hover #nav-icon1 span,
.top_menu:focus #nav-icon1 span
    background-color #333

